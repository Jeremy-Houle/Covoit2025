{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "NIXPACKS",
    "nixpacksConfigPath": "nixpacks-queue.toml"
  },
  "deploy": {
    "numReplicas": 1,
    "startCommand": "php artisan queue:work --tries=3 --timeout=90 --sleep=3",
    "restartPolicyType": "ON_FAILURE",
    "restartPolicyMaxRetries": 10
  }
}

